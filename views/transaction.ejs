            <div class="row h-100">
                <div class="col-2 transaction-list">
                    <% if (transactions) { %> 
                        <% transactions.forEach((transaction)=> { %>
                        <div class="transaction-list-item">
                            <% if (transaction.status == "active") { %>
                                <span class="transaction-indicator" style="background-color: rgb(255, 196, 0)"></span>
                            <% } else if (transaction.status == "finished") { %>
                                <span class="transaction-indicator" style="background-color: green"></span>
                            <% } else if (transaction.status == "interrupted") { %>
                                <span class="transaction-indicator" style="background-color: grey"></span>
                            <% } %>
                            <div class="rounded-circle border d-flex justify-content-center align-items-center avatar">
                                <i class="bi bi-person"></i>
                            </div>
                            <div class="d-flex align-items-center">
                                <% if (transaction.user1.name == user.name) { %>
                                    <b><%= transaction.user2.name %></b>
                                <% } else  { %>
                                    <b><%= transaction.user1.name %></b>
                                <% } %>
                            </div>
                        </div>
                        <% }) %> 
                    <% } else { %> 
                        There are no transactions... 
                    <% } %>
                </div>
                <div class="col-7 transaction-chatbox hidden"></div>
                <div class="col transaction-details">
                    <div class="container transaction-details-items">
                        <div class="row">
                            <div class="col">item1</div>
                            <div class="col">trade</div>
                            <div class="col">item2</div>
                        </div>
                    </div>
                    <button id="toggle-message-btn" class="btn">
                        Open Chat
                    </button>
