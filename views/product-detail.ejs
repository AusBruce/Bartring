<html lang="en">

<%- include("partials/header.ejs", {title: "Product Details"}) %>


<body>
    <div class="font2 bg" align="center">
        Welcome to the Bartering System
    </div>
    <div class="container">
        <%- include("partials/navbar") %>

        <img src="<%= product.imageUrl %>" alt="<%= product.name %>">
        <h1>
            <%= product.name %>
        </h1>
