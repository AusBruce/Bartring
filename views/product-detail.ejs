        integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="/js/script.js"></script>
    <script src="/js/navbar.js"></script>
</body>
<%- include("partials/footer.ejs") %>
</html>